package chapter2;

public class Variable1 {
	public static void main(String[] args) {
		int lineCount = 4;
		int startCount = 1;
		int spaceCount = lineCount - 1;
		
		for(int i=0; i<lineCount; i++) {
			for(int j=0; j<=spaceCount; j++) {
				System.out.print(' ');
			}
			for(int j=0; j<=startCount; j++) {
				System.out.print('*');
			}
		}
	
	}
}

package study;

public class Shape {

	public static void main(String[] args) {
		
		int line = 9;
		int spaceCount = (line / 2) + 1;
		int startCount = 1;
		
		for(int i=0; i<line; i++) {
			for(int j=0; j<spaceCount; j++) {
				System.out.print(' ');
			}
			for(int j=0; j<startCount; j++) {
				System.out.print('*');
			}
			
			if(i < line/2) {
				spaceCount -= 1;
				startCount += 2;	
			}
			else {
				spaceCount += 1;
				startCount -= 2;	
			}
			
			System.out.println();		
		}
	}
}

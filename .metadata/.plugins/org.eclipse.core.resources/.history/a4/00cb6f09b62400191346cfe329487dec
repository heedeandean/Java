package study;

public class Shape {

	public static void main(String[] args) {
		
		int line = 7;
		int spaceCount = (line / 2) + 2;
		int startCount = 1;
		
		for(int i=1; i<=line; i++) {
			for(int j=1; j<=spaceCount; j++) {
				System.out.print(' ');
			}
			for(int j=1; j<=startCount; j++) {
				System.out.print('*');
			}
			if(line<5) {
				spaceCount -= 1;
				startCount += 2;	
			}
			else {
				spaceCount += 1;
				startCount -= 2;	
			}
			
			System.out.println();
			
		}

	}

}

package study;

public class Shape {

	public static void main(String[] args) {
		int lineCount = 7;
		int startCount = 1;
		int spaceCount = (lineCount / 2) + 1;
		
		for(int i=0; i<=lineCount; i++) {
			for(int j=0; j<=spaceCount; j++) {
				System.out.print(' ');
				System.out.print('*');
			}
			System.out.println();
		}

	}

}

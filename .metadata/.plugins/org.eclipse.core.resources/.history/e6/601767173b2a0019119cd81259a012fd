package study;

public class Operator {

	public static void main(String[] args) {
		int num1 = 10;
		int num2 = 2;
		int result_if;
		char operator = '*';
		
		// if-else문
		if(operator == '+') {
			result_if = num1 + num2;
		} else if(operator == '-') {
			result_if = num1 - num2;
		} else if(operator == '*') {
			result_if = num1 * num2;
		} else if(operator == '/') {
			result_if = num1 /num2;
		} else {
			System.out.println("올바른 사칙 연산 기호가 아닙니다.");
			return;
		}
		
		System.out.println("결과는 " + result_if + "입니다.");

	}
}
